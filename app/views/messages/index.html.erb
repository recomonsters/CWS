<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Control</th>
      <th>Sent to</th>
      <th>Date sent</th>
      <th>Subject</th>
      <th>Received from</th>
      <th>Attachment</th>
      <th>Notes</th>
      <th>Send to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.control_id %></td>
        <td><%= message.sent_to %></td>
        <td><%= message.date_sent %></td>
        <td><%= message.subject %></td>
        <td><%= message.received_from %></td>
        <td><%= message.attachment %></td>
        <td><%= message.notes %></td>
        <td><%= message.send_to %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

